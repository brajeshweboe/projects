<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://ofbiz.apache.org/Site-Conf"
	xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
	<!-- The controller elements that are common to all OFBiz components can 
		be found in the following xml file. A component can override the elements 
		found in the common-controller.xml file. -->
	<include location="component://common/webcommon/WEB-INF/common-controller.xml" />
	<include location="component://product/webapp/facility/WEB-INF/controller.xml" />
	<include location="component://order/webapp/ordermgr/WEB-INF/controller.xml" />
	<include location="component://party/webapp/partymgr/WEB-INF/controller.xml" />
	<include location="component://product/webapp/catalog/WEB-INF/controller.xml" />
	<include location="component://accounting/webapp/accounting/WEB-INF/controller.xml" />
	<include location="component://accounting/webapp/ap/WEB-INF/controller.xml" />
	<include location="component://accounting/webapp/ap/WEB-INF/controller.xml" />
	<include location="component://accounting/webapp/ar/WEB-INF/controller.xml" />
	<include location="component:/ecommerce/webapp/ecommerce/WEB-INF/controller.xml" />
	<include location="component:/acme/webapp/acme/WEB-INF/controller-facility.xml" />
	
	<include location="component:/acme/webapp/acme/WEB-INF/controller-accounting.xml" />
	<include location="component:/acme/webapp/acme/WEB-INF/controller-invoice.xml" />
	<include location="component:/acme/webapp/acme/WEB-INF/controller-admin.xml" />
	
	
	
	<description>acme Component Site Configuration File</description>

	<!-- Events to run on every request before security (chains exempt) -->
	<!-- <preprocessor> </preprocessor> -->
	<!-- Events to run on every request after all other processing (chains exempt) -->
	<!-- <postprocessor> <event name="test" type="java" path="org.apache.ofbiz.webapp.event.TestEvent" 
		invoke="test"/> </postprocessor> -->

	<!-- Request Mappings -->
	<request-map uri="main">
		<security https="true" auth="true" />
		<response name="success" type="view" value="main" />
	</request-map>
	<request-map uri="FindGlobalGlAccount">
		<security https="true" auth="true" />
		<response name="success" type="view" value="FindGlobalGlAccount" />
	</request-map>
	<request-map uri="GlAccountNavigate">
		<security https="true" auth="true" />
		<response name="success" type="view" value="GlAccountNavigate" />
	</request-map>

	<request-map uri="bookinglist">
		<security https="true" auth="true" />
		<response name="success" type="view" value="bookinglist" />
		<response name="error" type="view" value="bookinglist" />
	</request-map>

	<request-map uri="jobcardlist">
		<security https="true" auth="true" />
		<response name="success" type="view" value="jobcardlist" />
		<response name="error" type="view" value="jobcardlist" />
	</request-map>

	<request-map uri="jobcarddetails">
		<security https="true" auth="true" />
		<response name="success" type="view" value="jobcarddetails" />
		<response name="error" type="view" value="jobcarddetails" />
	</request-map>

	<request-map uri="modifyJobCard">
		<security https="true" auth="true" />
		<response name="success" type="view" value="jobcarddetails" />
		<response name="error" type="view" value="jobcarddetails" />
	</request-map>

	<!-- View Mappings -->
	<view-map name="login" type="screen"
		page="component://acme/widget/CommonScreens.xml#Login" />
	<view-map name="main" type="screen"
		page="component://acme/widget/AcmeScreens.xml#main" />
	<view-map name="FindGlobalGlAccount" type="screen"
		page="component://acme/widget/AccountingScreens.xml#ListGlAccounts" />
	<view-map name="GlAccountNavigate" type="screen"
		page="component://acme/widget/AccountingScreens.xml#GlAccountNavigate" />
	<view-map name="jobcardlist" type="screen"
		page="component://acme/widget/AcmeScreens.xml#JobCardList" />
	<view-map name="jobcarddetails" type="screen"
		page="component://acme/widget/AcmeScreens.xml#JobCardDetails" />
	<view-map name="bookinglist" type="screen"
		page="component://acme/widget/AcmeScreens.xml#BookingList" />
</site-conf>